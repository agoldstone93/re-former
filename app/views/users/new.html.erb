<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, 'error') %> prohibited this user being created</h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<br>
<%= form_with model: @user do |form| %>
  <%= form.label :email %>
  <%= form.text_field :email, placeholder: "example@example.com" %><br>
  <%= form.label :username %>
  <%= form.text_field :username %><br>
  <%= form.label :password %>
  <%= form.password_field :password %><br>
  <%= form.submit %>
<% end %>
